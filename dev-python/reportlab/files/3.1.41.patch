+    def multiply(self, e):
+        num = [0] * (self.getLength() + e.getLength() - 1);
+        for i in range(self.getLength()):
+            for j in range(e.getLength()):
+                num[i + j] ^= QRMath.gexp(QRMath.glog(self.get(i) ) +
+                                          QRMath.glog(e.get(j) ) )
+        return QRPolynomial(num, 0);
