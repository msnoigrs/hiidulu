+    def mod(self, e):
+        if (self.getLength() < e.getLength()):
+            return self;
+        ratio = QRMath.glog(self.num[0] ) - QRMath.glog(e.num[0] )
+        num = [nn ^ QRMath.gexp(QRMath.glog(en) + ratio)
+               for nn,en in zip(self.num, e.num)]
